FROM python:3.10-slim

WORKDIR /app

COPY api/agent ./api_agent

# Installer requests qui manque
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    httpx \
    langdetect \
    prometheus_client \
    requests  

EXPOSE 8000

CMD ["uvicorn", "api_agent.main:app", "--host", "0.0.0.0", "--port", "8000"]